<!DOCTYPE mydocument>
<tbe-level>
    <levelinfo>
        <title>Bridge the Gap III</title>
        <title lang="nl">De Afgrond deel 3</title>
        <author>Klaas van Gend</author>
        <license>GPLv2</license>
        <description>a tennis ball needs to cross a big gap. Let's help crossing.</description>
        <description lang="nl">een tennisbal moet over de afgrond. Laten we 'm eens helpen.</description>
        <date>March 9, 2010</date>
    </levelinfo>
    <toolbox>
        <toolboxitem count="2" name="Skyhook">
            <object type="Skyhook" ID="Skyhook">
                <property key="ZValue" >0.2</property>
            </object>
        </toolboxitem>
        <toolboxitem count="2" name="Beam">
            <object width="0.8" height="0.1" type="RectObject">
                <property key="ImageName" >i-beam</property>
                <property key="Mass" >20</property>
                <property key="Friction" >0.1</property>
                <property key="Resizable" >none</property>
                <property key="Bounciness" >0.0</property>
            </object>
        </toolboxitem>
        <toolboxitem count="1" name="Hammer">
	    <object width="0.45" height="0.18" type="RectObject" >
                <property key="ImageName">hammer</property>
                <property key="Mass">15.0</property>
                <property key="Bounciness">0.0</property>
                <property key="Friction">0.0</property>
                <property key="PivotPoint">(0.2,0)</property>
	    </object>
        </toolboxitem>
    </toolbox>
    <scene>
        <scenesize width="5" height="3" />
        <predefined>
            <object width="0.9" X="0.7" Y="2.15" height="0.1" type="RectObject" >
                <property key="ImageName" >birch_bar</property>
                <property key="Bounciness" >0.1</property>
	    </object>
            <object X="0.75" Y="1.1" height="2.0" width="1.0" type="RectObject">
                <property key="ImageName" >birch_bar</property>
                <property key="Bounciness" >0.0</property>
            </object>

            <object X="0.8" Y="2.95" type="Tennis Ball" ID="Ball"/>

            <object X="2" Y="0.5" type="PostIt">
                <property key="page1" >Look, another gap.</property>
                <property key="page2" >It's a tennis ball this time that wants to cross.</property>
                <property key="page3" >&lt;br&gt; &lt;br&gt; the Post-It Boy &lt;br&gt; &lt;br&gt; is on it again </property>
                <property key="page1_nl">Kijk, nog zo'n afgrond!</property>
                <property key="page2_nl">Dit keer wil er een tennisbal overheen.</property>
                <property key="page3_nl">&lt;br&gt; &lt;br&gt; de Post-It Boy &lt;br&gt; &lt;br&gt; &lt;br&gt; blijft bezig </property>
	    </object>

            <object width="4.4" X="2.2" Y="0.05" height="0.1" type="RectObject" >
                <property key="ImageName" >used_wood_bar</property>
                <property key="Bounciness" >0.1</property>
	    </object>

            <object width="1.2" X="4.4" Y="2.35" height="0.1" type="RectObject" >
                <property key="ImageName" >used_wood_bar</property>
                <property key="Bounciness" >0.1</property>
	    </object>
            <object width="0.6" X="4.1" Y="1.77" height="0.1" type="RectObject" >
                <property key="ImageName" >used_wood_bar</property>
                <property key="Bounciness" >0.1</property>
	    </object>
	    
            <object X="4.35" Y="0.90" height="1.70" width="0.1" type="RectObject">
                <property key="ImageName" >used_wood_bar</property>
            </object>
	    <object X="4.65" Y="0.45" width="0.5" height="0.9" type="Scenery" >
                <property key="ImageName" >basket</property>
            </object>
            <object X="4.95" Y="1.15" height="2.3" width="0.1" type="RectObject">
                <property key="ImageName" >used_wood_bar</property>
            </object>

            <object X="4.1" Y="1.99" type="Bowling Pin" ID="the Pin" />
        </predefined>
    </scene>
    <goals>
	<goal type="positionchange">
	    <property key="ybelow">0.5</property>
	    <property key="object">the Pin</property>
	</goal>
	<goal type="positionchange">
	    <property key="xover">4.3</property>
	    <property key="object">the Pin</property>
	</goal>
	<goal type="positionchange">
	    <property key="xover">4.3</property>
	    <property key="object">Ball</property>
	</goal>
    </goals>
</tbe-level>
